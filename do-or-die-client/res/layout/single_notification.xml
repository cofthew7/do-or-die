<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:padding="8dp"
    android:tag="@+id/notification_id" >

    <TextView
        android:id="@+id/notification_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:text="Todo"
        android:textColor="#0199CC"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/notifier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/notification_content"
        android:paddingLeft="5dp"
        android:paddingTop="4dp"
        android:text="Deadline: 2012-03-03"
        android:textColor="#33CCFF"
        android:textSize="10dp" />

    <TextView
        android:id="@+id/notification_createdDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/notification_content"
        android:paddingTop="4dp"
        android:text="Created: 2012-01-01"
        android:textColor="#00BB00"
        android:textSize="10dp" />

</RelativeLayout>