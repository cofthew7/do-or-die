<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#DFDFDF"
        android:orientation="horizontal"
        android:paddingBottom="2dp" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ffffff"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp"
            android:text=" "
            android:textColor="#33CCFF"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ffffff"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:padding="10dp"
            android:text="Notification"
            android:textColor="#33CCFF"
            android:textSize="18dp" />

        <Button
            android:id="@+id/notification_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="10dp"
            android:text="R"
            android:textColor="#33CCFF"
            android:textSize="18dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:padding="8dp"
        android:tag="@+id/notify_todo_id" >

        <TextView
            android:id="@+id/notify_todo_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="Todo"
            android:textColor="#0199CC"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/notify_todo_deadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/notify_todo_name"
            android:paddingLeft="5dp"
            android:paddingTop="4dp"
            android:text="Deadline: 2012-03-03"
            android:textColor="#E92C65"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/notify_todo_createdDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/notify_todo_name"
            android:paddingTop="4dp"
            android:text="Created: 2012-01-01"
            android:textColor="#00BB00"
            android:textSize="10dp" />
    </RelativeLayout>

    <TextView 
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:background="#DFDFDF" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffff"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/notification_listview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:divider="#DFDFDF"
            android:dividerHeight="2dp"
            android:drawSelectorOnTop="false"
            android:fadingEdge="none" />
    </LinearLayout>

</LinearLayout>